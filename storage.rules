
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // --- Specific Paths First ---

    // Allow users to write to their own avatar directory.
    match /avatars/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to write to their own post image directory.
    match /posts/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to write to their own event image directory.
    match /event_images/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to write to their own business image directory.
    match /businesses/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to write to chat image directories.
    match /chat_images/{conversationId}/{allPaths=**} {
        allow write: if request.auth != null;
    }

    // --- General Read Access Last ---
    // Allow public read access to all files.
    match /{allPaths=**} {
      allow read;
    }
  }
}
