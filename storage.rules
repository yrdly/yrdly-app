rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files. 
    // This is simple and works for things like post images and user avatars.
    // For more sensitive data, you might want more restrictive rules.
    match /{allPaths=**} {
      allow read;
    }

    // Users can only write to a folder that matches their own user ID.
    // This rule covers the path `posts/{userId}/{filename}`.
    match /posts/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
