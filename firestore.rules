rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if the user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Anyone can see a user's public profile
      allow read: if isAuthenticated();
      // A user can create their own profile upon signup
      allow create: if isOwner(userId);
      // A user can only update their own profile
      allow update: if isOwner(userId);
      // Users cannot delete their profiles
      allow delete: if false;
    }

    // Businesses collection
    match /businesses/{businessId} {
      // Any authenticated user can view business listings
      allow read: if isAuthenticated();
      // Only authenticated users can create a business listing
      allow create: if isAuthenticated();
      // Only the owner of a business listing can update or delete it
      allow update, delete: if isAuthenticated() && isOwner(resource.data.ownerId);
    }

    // Posts collection
    match /posts/{postId} {
      // Any authenticated user can read posts
      allow read: if isAuthenticated();
      // A user can create a post if they are logged in
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      // A user can only update or delete their own posts
      allow update, delete: if isAuthenticated() && isOwner(resource.data.userId);

      // Comments subcollection
      match /comments/{commentId} {
        // Any authenticated user can read comments
        allow read: if isAuthenticated();
        // Any authenticated user can create a comment
        allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
        // Only the author of a comment can update or delete it
        allow update, delete: if isAuthenticated() && isOwner(resource.data.userId);
      }
    }
    
    // Friend Requests collection
    match /friend_requests/{requestId} {
        // A user can only read a friend request if they are part of it
        allow read: if isAuthenticated() && request.auth.uid in resource.data.participantIds;
        // A user can create a friend request if they are the sender
        allow create: if isAuthenticated() && isOwner(request.resource.data.fromUserId);
        // A user can update a request (accept/decline) if they are the recipient or cancel if they are the sender
        allow update: if isAuthenticated() && request.auth.uid in resource.data.participantIds;
        // No one can delete friend requests directly, they are just updated to a final state
        allow delete: if false;
    }

    // Conversations collection
    match /conversations/{conversationId} {
      // A user can only read a conversation if they are a participant
      allow read: if isAuthenticated() && request.auth.uid in resource.data.participantIds;
      // A user can create a conversation if they are a participant
      allow create: if isAuthenticated() && request.auth.uid in request.resource.data.participantIds;
      // Only participants can update the conversation (e.g., lastMessage)
      allow update: if isAuthenticated() && request.auth.uid in resource.data.participantIds;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Participants of the conversation can read messages
        allow read: if isAuthenticated() && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds.hasAny([request.auth.uid]);
        // A user can create a message if they are the sender and a participant in the conversation
        allow create: if isAuthenticated() 
                      && isOwner(request.resource.data.senderId)
                      && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds.hasAny([request.auth.uid]);
      }
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Users can only read their own notifications
      allow read: if isAuthenticated() && isOwner(resource.data.userId);
      // Users can update their own notifications (e.g., mark as read)
      allow update: if isAuthenticated() && isOwner(resource.data.userId);
       // Users cannot create or delete notifications directly (done by cloud functions)
      allow create, delete: if false;
    }
  }
}