
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isParticipant(conversationId) {
        return request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
    }

    // Users: Read any, only write your own
    match /users/{userId} {
      allow read;
      allow create, update: if isUser(userId);
    }
    
    // Friend Requests: read any, create your own, update only if you are the recipient
    match /friend_requests/{requestId} {
        allow read: if isSignedIn();
        allow create: if isUser(request.resource.data.fromUserId);
        allow update: if isUser(resource.data.toUserId);
    }

    // Businesses: read any, create any (auth), update/delete your own
    match /businesses/{businessId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    // Posts: read any, create any (auth), update/delete your own
    match /posts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      // Allow liking (updating likedBy) and attending (updating attendees) by any signed in user
      allow update: if (isSignedIn() && request.resource.data.userId == request.auth.uid) || 
                       (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likedBy', 'attendees']));
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Comments
      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        // Allow updating reactions by any signed-in user
        allow update: if (isUser(resource.data.userId)) || 
                         (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['reactions']));
        allow delete: if isUser(resource.data.userId);
      }
    }

    // Conversations & Messages
    match /conversations/{conversationId} {
      // Only participants can read or create a conversation
      allow read, create: if isSignedIn() && request.auth.uid in request.resource.data.participantIds;
      // Only participants can update the conversation (e.g., lastMessage)
      allow update: if isSignedIn() && request.auth.uid in resource.data.participantIds;
      // Deleting conversations is not allowed from the client
      allow delete: if false;

      match /messages/{messageId} {
        allow read, create: if isParticipant(conversationId);
        // Users can only update/delete their own messages
        allow update, delete: if isUser(resource.data.senderId);
      }
    }
  }
}
