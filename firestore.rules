rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Reusable Helper Functions ---

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isDataObject(data) {
        return data is map && data.keys().size() > 0;
    }

    function isValidLocation(location) {
      return location is map &&
             location.keys().hasOnly(['address', 'geopoint']) &&
             location.address is string &&
             (!('geopoint' in location) || location.geopoint is latlng);
    }
    
    function isIncomingData() {
        return request.resource.data;
    }

    // --- Collection Rules ---

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId) &&
                    isDataObject(isIncomingData()) &&
                    isIncomingData().name is string &&
                    isIncomingData().email == request.auth.token.email; // Ensure email matches token
      
      // A user can only update their own document, and only specific, non-critical fields.
      // 'friends' and 'blockedUsers' should be managed by Cloud Functions.
      allow update: if isOwner(userId) &&
                    request.resource.data.diff(resource.data).affectedKeys()
                      .hasOnly(['name', 'bio', 'location', 'avatarUrl', 'fcmToken', 'notificationSettings']);
    }

    match /posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(isIncomingData().userId) &&
                      isIncomingData().authorName is string &&
                      isIncomingData().category is string &&
                      isIncomingData().text is string &&
                      isIncomingData().timestamp == request.time &&
                      (!('eventLocation' in isIncomingData()) || isValidLocation(isIncomingData().eventLocation));

      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;

      allow update: if isAuthenticated() && (
        // Case 1: The owner is updating their post.
        (resource.data.userId == request.auth.uid &&
          request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['text', 'title', 'description', 'category', 'price', 'imageUrls', 'imageUrl', 'eventLocation', 'eventDate', 'eventTime', 'eventLink']) &&
            (!('eventLocation' in isIncomingData()) || isValidLocation(isIncomingData().eventLocation))
        ) ||
        // Case 2: A user is liking/unliking a post (only adding/removing themselves).
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likedBy']) &&
          (request.resource.data.likedBy == resource.data.likedBy.concat([request.auth.uid]) || 
           request.resource.data.likedBy == resource.data.likedBy.remove(request.auth.uid))
        ) ||
        // Case 3: A user is attending/unattending an event (only adding/removing themselves).
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['attendees']) &&
          (request.resource.data.attendees == resource.data.attendees.concat([request.auth.uid]) ||
           request.resource.data.attendees == resource.data.attendees.remove(request.auth.uid))
        )
      );
    }

    match /posts/{postId}/comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isOwner(isIncomingData().userId) &&
                        isIncomingData().authorName is string &&
                        isIncomingData().text is string && isIncomingData().text.size() < 500 &&
                        isIncomingData().timestamp == request.time;

        // Allow comment author to edit their own comment text.
        allow update: if isOwner(resource.data.userId) &&
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['text']);

        allow delete: if isAuthenticated() && (
                        resource.data.userId == request.auth.uid ||
                        get(/databases/$(database)/documents/posts/$(postId)).data.userId == request.auth.uid
                      );
    }
    
    match /friend_requests/{requestId} {
        allow read, update: if isAuthenticated() && request.auth.uid in resource.data.participantIds;
        allow create: if isAuthenticated() && 
                        isOwner(isIncomingData().fromUserId) &&
                        isIncomingData().status == 'pending';
        allow delete: if isAuthenticated() && isOwner(resource.data.fromUserId);
    }

    match /conversations/{conversationId} {
      allow read, create, update: if isAuthenticated() && request.auth.uid in resource.data.participantIds;
      
      match /messages/{messageId} {
        allow read: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
        allow create: if isAuthenticated() && 
                        isOwner(isIncomingData().senderId) &&
                        isIncomingData().text is string && isIncomingData().text.size() < 1000 &&
                        isIncomingData().timestamp == request.time &&
                        request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
      }
    }

    match /businesses/{businessId} {
      allow get; // Publicly readable
      allow list: if isAuthenticated();
      allow create: if isOwner(isIncomingData().ownerId) &&
                      isIncomingData().name is string &&
                      isIncomingData().category is string &&
                      isIncomingData().description is string &&
                      isValidLocation(isIncomingData().location);

      allow update: if isOwner(resource.data.ownerId) &&
                      request.resource.data.diff(resource.data).affectedKeys()
                        .hasOnly(['name', 'category', 'description', 'imageUrls', 'location']) &&
                      isValidLocation(isIncomingData().location);

      allow delete: if isOwner(resource.data.ownerId);
    }
    
    match /notifications/{notificationId} {
        allow read: if isOwner(resource.data.userId);
        // Only allow updating the 'isRead' status.
        allow update: if isOwner(resource.data.userId) &&
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isRead']);
    }
  }
}