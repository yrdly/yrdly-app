
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can be read by any authenticated user, but only created or updated by themselves.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth.uid == userId;
    }

    // Posts can be read by any authenticated user.
    // They can be created by any authenticated user.
    // They can only be updated or deleted by the author.
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth.uid == resource.data.userId;

      // Comments can be read by anyone authenticated.
      // Comments can be created by any authenticated user.
      match /comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth.uid == request.resource.data.userId;
        allow update, delete: if request.auth.uid == resource.data.userId;
      }
    }

    // Friend requests can only be accessed by participants.
    // A user can create a request.
    // The recipient can update it (to accept/decline).
    match /friend_requests/{requestId} {
      allow read, update: if request.auth.uid in resource.data.participantIds;
      allow create: if request.auth.uid == request.resource.data.fromUserId;
    }

    // Businesses can be read by any authenticated user.
    // They can only be created by an authenticated user.
    match /businesses/{businessId} {
        allow read: if request.auth != null;
        allow create: if request.auth.uid == request.resource.data.ownerId;
        allow update, delete: if request.auth.uid == resource.data.ownerId;
    }

    // Conversations can only be accessed by participants.
    match /conversations/{conversationId} {
        allow read, create, update: if request.auth.uid in resource.data.participantIds;

        // Messages within a conversation follow the same rule.
        match /messages/{messageId} {
            allow read, create: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
        }
    }
    
    // Notifications can only be accessed by the user they are intended for.
    match /notifications/{notificationId} {
      allow read, update: if request.auth.uid == resource.data.userId;
    }
  }
}
